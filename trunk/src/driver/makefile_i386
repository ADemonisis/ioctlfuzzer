OUTNAME=driver_i386

ALL: $(OUTNAME).sys

CC=cl.exe

CFLAGS=/nologo -I".\src" -I"$(DDK_INC_PATH)" -I"$(CRT_INC_PATH)" -DDBGMSG_FULL -DDBGMSG -DDBGPIPE -D_X86_=1 /Gz /Zp8 /c

AM=ml.exe

AMFLAGS=/nologo /c

common_asm.obj: src/asm/i386/common_asm.asm
    $(AM) $(AMFLAGS) src/asm/i386/common_asm.asm

include makefile.inc

LN=link.exe

LFLAGS=/LIBPATH:$(DDK_LIB_PATH)\..\i386 /LIBPATH:$(CRT_LIB_PATH)\..\i386 /OPT:REF /OPT:ICF /INCREMENTAL:NO /DEBUG /DEBUGTYPE:CV /OPT:nowin98 /STACK:0x40000,0x1000 /DRIVER /BASE:0x10000 /ALIGN:0x80 /SUBSYSTEM:native,5.01 /ENTRY:DriverEntry /out:../$(OUTNAME).sys

$(OUTNAME).sys: $(LOBJS)        
    $(LN) $(LFLAGS) $(LOBJS) $(LLIBS) BufferOverflowK.lib

clean:
     @del *.obj 
